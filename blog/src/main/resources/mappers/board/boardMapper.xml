 	<select id="readAll" parameterType="String" resultType="com.dailyblog.www.model.board.dto.BoardDto">
		SELECT t1.up_no, t1.mem_no, t1.comments, t1.file_name, t2.nickname, t3.user_id
		FROM upload t1 INNER JOIN profile t2 ON (t1.mem_no = t2.mem_no) 
